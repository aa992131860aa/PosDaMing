<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/text_space"
            android:paddingLeft="@dimen/text_space"
            android:paddingRight="@dimen/text_space"
            android:paddingTop="@dimen/text_space"
            android:text="1000100"
            android:textColor="@color/highlight" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/text_space"
            android:paddingLeft="@dimen/text_space"
            android:paddingRight="@dimen/text_space"
            android:paddingTop="@dimen/text_space"
            android:text="电动车"
            android:textColor="@color/highlight" />


        <TextView
            android:id="@+id/tv_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/text_space"
            android:paddingLeft="@dimen/text_space"
            android:paddingRight="@dimen/text_space"
            android:paddingTop="@dimen/text_space"
            android:text="100"
            android:textColor="@color/highlight" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:paddingBottom="@dimen/text_space"
            android:paddingLeft="@dimen/text_space"
            android:paddingRight="@dimen/text_space"
            android:paddingTop="@dimen/text_space"
            android:text="量"
            android:textColor="@color/highlight" />



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_space"
        android:background="@color/gray" />
</LinearLayout>